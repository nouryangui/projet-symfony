{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Livre</h1>

    <table class="table" border="1">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ livre.id }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ livre.titre }}</td>
        </tr>
        <tr>
            <th>NombrePage</th>
            <td>{{ livre.nombrePage }}</td>
        </tr>
        <tr>
            <th>DateEdition</th>
            <td>{{ livre.dateEdition ? livre.dateEdition|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>NombreExamplaires</th>
            <td>{{ livre.nombreExamplaires }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ livre.prix }}</td>
        </tr>
        <tr>
            <th>Isbn</th>
            <td>{{ livre.isbn }}</td>
        </tr>
        <tr>
            <th>Editeur</th>
            <td>{{ livre.editeur.nom }}</td>
        </tr>
        <tr>
            <th>Categorie</th>
            <td>{{ livre.categorie.designation }}</td>
        </tr>
        <tr>
            <th>Auteurs</th>
            <td>{% for auteur in livre.auteurs %}
                    {{ auteur.nom }}
                    {{ auteur.prenom }}
                {% endfor %}
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('livre_index') }}">back to list</a>

    <a href="{{ path('livre_edit', {'id': livre.id}) }}">edit</a>

    {{ include('livre/_delete_form.html.twig') }}
{% endblock %}
