{% extends 'base.html.twig' %}

{% block title %}{{ titre }}{% endblock %}

{% block body %}

    <table class="table" border="1">
        <tbody>

        <tr>
            <th>Nom</th>
            <td>{{ editeur.nom }}</td>
        </tr>
        <tr>
            <th>Adresse</th>
            <td>{{ editeur.adresse }}</td>
        </tr>
        <tr>
            <th>Pays</th>
            <td>{{ editeur.pays }}</td>
        </tr>
        <tr>
            <th>Telephone</th>
            <td>{{ editeur.telephone }}</td>
        </tr>
        </tbody>
    </table>
    <div class="row form-group">
        <div class="col col-lg-2"><a href="{{ path('editeur_index') }}"><span class="btn btn-primary"><i
                            class="fa fa-backward"></i></span></a>
        </div>


        <div class="col col-lg-2"><a href="{{ path('editeur_edit', {'id': editeur.id}) }}"><span class="btn btn-success" ><i
                            class="fa fa-pencil"></i>Editer</span></a></div>
    </div>
{% endblock %}
